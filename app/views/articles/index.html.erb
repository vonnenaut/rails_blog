<h1>Blog Posts</h1>

<%= link_to 'New post', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Test</th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>
